<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="assets/styles/hobbies_style.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="header"></header>
    <div id="background">
      <div class="gtranslate_wrapper"></div>

      <section class="hobbies">
        <h2 class="heading">Hobbies</h2>
        <div class="hobbies-wrapper">
          <% hobbies.forEach(hobby => { %>
          <div class="hobby-card">
            <img src="<%= hobby.image_name %>" alt="" />
            <div class="info">
              <h1><%= hobby.name %></h1>
              <p><%= hobby.description %></p>
              <!-- <a href="#" class="btn">Read More</a> -->
            </div>
          </div>
          <% }); %>
        </div>
      </section>
    </div>
  </body>
  <script src="assets/js/toggle-menu.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/particles.js/2.0.0/particles.min.js"></script>
  <script src="assets/js/script.js"></script>
  <script src="assets/js/shared_menu.js"></script>
  <script src="assets/js/cursor_effect.js"></script>
  <script src="assets/js/translate.js"></script>
  <script
    src="https://cdn.gtranslate.net/widgets/latest/float.js"
    defer
  ></script>
</html>
